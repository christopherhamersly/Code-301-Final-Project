  
<h4 id="breweries_header"> Breweries </h4>

<% brewery.forEach(oneBrew => { %>
  <section id="<%= oneBrew.api_id %>">
    <div id="brewery_container">
    <h5 id="brewery_name"><%= oneBrew.name %></h5>
    <h5 id="brewery_type">Brewery Type: <%= oneBrew.type %></h5>
    <h5 ><a id="brewery_website" href="<%= oneBrew.website %>" target="blank">Brewery Website</a></h5>
    
    <form action="/favorites" method="POST">
      <input type="hidden" name="table_name" value="breweries" />
      <input type="hidden" name="api_id" value=<%= oneBrew.api_id %> />
      <input type="hidden" name="name" value="<%= oneBrew.name %>"/>
      <input type="hidden" name="latitude" value="<%= oneBrew.latitude %>"/>
      <input type="hidden" name="longitude" value="<%= oneBrew.longitude %>"/>
      <input type="hidden" name="type" value="<%= oneBrew.type %>"/>
      <input type="hidden" name="website" value="<%= oneBrew.website %>"/>
      <% if (oneBrew.cached) { %>
        <a href="/favorites">Link to Favorites</a>
      <% } else { %>
        <button type="submit" class="add-favorite">Add to my favorites</button>
      <% } %>
    </form>
  </section>  
<% }); %>
</div>